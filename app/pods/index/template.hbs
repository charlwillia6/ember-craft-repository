<!-- app/pods/index/template.hbs -->
{{title "Dashboard"}}
<div class="ui grid">
    {{#if media.isDesktop}}
        <div class="ui computer only centered sixteen wide row">
            <div class="fourteen wide column">
                <div class="ui header">
                    Dashboard
                </div>
                {{!-- Projects Cards Component --}}
                {{projects-cards model=model}}
            </div>
        </div>
    {{else if (or media.isTablet media.isMobile)}}
        <div class="ui tablet only mobile only row">
            <div class="column">
                <div class="ui header">
                    Dashboard
                </div>
                {{!-- Projects Cards Component --}}
                {{projects-cards model=model}}
            </div>
        </div>
    {{/if}}
</div>

