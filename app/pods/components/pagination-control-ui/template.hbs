<!-- app/pods/components/pagination-control/template.js -->
<div class="ui pagination secondary fluid menu">
    <div class="ui two column centered center aligned stackable grid container">
        <div class="column">
            <div class="item">
                <div class="ui form pagination-form">
                    <div class="inline field">
                        <div class="ui right labeled input">
                            <label class="ui basic label">Page</label>
                                <input type="text" value={{currentPage}} onchange={{action 'goToPage' value='target.value'}}
                                class="page-input" size="5">
                            <label class="ui basic label"> of {{pageCount}}</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="item">
                <div class="field">
                    <button class="ui button" {{action 'previous'}} disabled={{disablePageReverse}}>
                        <i class="left arrow icon"></i>
                        Previous
                    </button>
                    <button class="ui button" {{action 'next'}} disabled={{disablePageForward}}>
                        Next
                        <i class="right arrow icon"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
