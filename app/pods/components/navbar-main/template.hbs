<div class="ui inverted menu">
    <div class="ui black button item" {{action 'toggle' 'sub-sidebar'}}>
        <i class="white list icon"></i>
    </div>
    <div class="header item" {{action 'index'}}>
        CRAFT Repository
    </div>
    <div class="right menu">
        {{#if session.isAuthenticated}}
            <div class="ui black user login label item">
                <img class="ui tiny avatar image" src="{{gravatarUrl}}" alt="User gravatar">
                <span>{{user.fullName}}</span>
            </div>
            <div {{action 'logout'}} class="ui red button item">
                <i class="log out icon"></i> Logout
            </div>
        {{else}}
            {{#link-to 'login' class="ui green button item"}}
                <i class="log in icon"></i>Login
            {{/link-to}}
        {{/if}}
    </div>
</div>
