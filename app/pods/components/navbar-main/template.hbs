<div class="ui inverted grid segment" style="margin: 0;">
    <div class="one wide column">
        <div class="ui black button item" {{action 'toggle' 'sub-sidebar'}}>
            <i class="large white list icon"></i>
        </div>
    </div>

    <div class="three wide column">
      <div {{action 'index'}} class="ui image"><img src=''></div>
    </div>

    <div class="twelve wide column">
        <div class="ui inverted menu">
            <div class="right menu">
              <div class="item">
                  <div class="ui icon input">
                      <input type="text" placeholder="Search...">
                      <i class="search link icon"></i>
                  </div>
              </div>
            </div>
        </div>
    </div>
</div>


{{#ui-sidebar class="ui left vertical inverted sidebar labeled icon menu" context=".component.context" id="sub-sidebar"}}
    <div class="item">
        <div class="menu">
            {{#link-to 'index' invokeAction=(action 'closeMenu') class="item"}}
                <i class="home icon"></i>
                Dashboard
            {{/link-to}}
        </div>
    </div>
    <div class="item">
        <div class="header">Info</div>
        <div class="menu">
            <div class="item"></div>
        </div>
    </div>
{{/ui-sidebar}}
