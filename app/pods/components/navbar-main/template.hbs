<!-- app/pods/components/navbar-main/template.hbs -->
<div class="ui inverted menu main navbar">
    <div class="ui big black button item" {{action 'toggleSidebar' 'sub-sidebar'}}>
        <i class="white list icon"></i>
    </div>
    <div class="header item logo">
        {{#link-to 'index'}}
            <img class="ui right spaced image logo header" src="/assets/images/craft.png" alt="CRAFT Logo"/>
            <div>REPOSITORY</div>
        {{/link-to}}
    </div>
    <div class="right menu">
        {{#if session.isAuthenticated}}
            {{#ui-dropdown class="item"}}
                <div class="ui black user login">
                    <img class="ui avatar image" src="{{gravatarUrl}}" alt="User gravatar" width="25px">
                    {{user.fullName}}
                </div>
                <i class="dropdown icon"></i>
                <div class="menu">
                    {{#link-to 'profile' class="right item"}}
                        <i class="user icon"></i> Profile
                    {{/link-to}}
                    <div class="item" {{action 'logout'}}>
                        <i class="sign out icon"></i> Logout
                    </div>
                </div>
            {{/ui-dropdown}}
        {{!-- {{else}}
            {{#link-to 'login' class="ui black item"}}
                <i class="sign in icon"></i>Login
            {{/link-to}} --}}
        {{/if}}
    </div>
</div>
