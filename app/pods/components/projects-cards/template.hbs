
<div class="ui three doubling cards">
    {{#each model as |project|}}
        <div class="ui fluid card">
            <div class="fluid image">
                <img src="/assets/images/chip.jpg">
            </div>
            <div class="content">
                <div class="header">{{project.title}}</div>
                <div class="meta">
                    <span class="date">Last Updated on {{moment-from-now project.dateModified}}</span><br>
                    Type: {{capitalize project.category}}
                </div>
                <div class="description">
                    {{project.description}}
                </div>
            </div>
            <div class="extra content">
                {{#link-to 'projects.detail' project.id class="ui bottom attached red labeled icon button"}}
                 Detail <i class="expand icon"></i>
                {{/link-to}}
            </div>

        </div>
    {{/each}}
</div>

