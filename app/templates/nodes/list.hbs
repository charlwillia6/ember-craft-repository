<!-- app/templates/nodes/index.hbs -->
<h2 class="ui header">My Projects</h2>
{{!-- Project List --}}
<div class="ui cards">
    {{#each model as |node|}}
        <div class="ui card">
            <div class="content">
                <div class="header">{{node.title}}</div>
            </div>
            <div class="content">
                <h4 class="ui sub header">Detail</h4>
                <div class="ui small feed">
                    <div class="event">
                        <div class="content">
                            <div class="summary">
                                <div class="ui list">
                                    <div class="item">
                                        <div class="content">
                                            <a class="header">Category</a>
                                            <div class="description">{{node.category}}</div>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <div class="content">
                                            <a class="header">Date Created</a>
                                            <div class="description">{{moment-format node.dateCreated}}</div>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <div class="content">
                                            <a class="header">Date Modified</a>
                                            <div class="description">{{moment-format node.dateModified}}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="extra content">
                <a href="{{node.links.html}}" target="_blank" class="ui blue button">View on OSF</a>
                {{link-to 'Detail' 'nodes.detail' node.id class="ui orange button"}}
            </div>
        </div>
    {{/each}}
</div>
<div class="ui segment">
    {{pagination-control-ui
        currentPage=page
        pageCount=totalPages
        next=(action 'next')
        previous=(action 'previous')
        goToPage=(action 'goToPage')
    }}
</div>
